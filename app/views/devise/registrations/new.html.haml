.left-content{style: "width: 50%;"}
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .sign-up-wrapper
      .row
        .col-xs-6
          .form-group.label-floating
            = f.label :username, class: "control-label"
            = f.text_field :username, autofocus: true, class: "form-control", id: "i5i"

          .form-group.label-floating
            = f.label :email, class: "control-label"
            = f.email_field :email, class: "form-control", id: "i5i"
            %span.help-block Please enter a valid email address

          .form-group.label-floating
            = f.label :password, class: "control-label"
            = f.password_field :password, autocomplete: "off", class: "form-control", id: "i5i"
            - if @minimum_password_length
              %em
                %span.help-block (#{@minimum_password_length} characters minimum)

          .form-group.label-floating
            = f.label :password_confirmation, class: "control-label"
            = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "i5i"

        .col-xs-6
          .user-image
            %img#user_avatar.media-object{ "data-holder-rendered": "true", "data-src": "holder.js/64x64", src: "", style: "display:none;"}
            .btn.btn-primary.btn-file
              image upload
              = f.file_field :image, id: "upload_avatar"

      .form-group{style: "margin-top: 0px;"}
        = f.submit "Sign up", class: "btn btn-primary"
      = render "devise/shared/links"


:javascript
  $(function(){
    var user_avatar = $("#upload_avatar");
    user_avatar.change(function(){
      upload_image_user(this)
    });
  });
